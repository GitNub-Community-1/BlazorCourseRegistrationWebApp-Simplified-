@page "/detailscourse/{Id:int}"
@using BlazerApp.Models.Dtos
@using BlazerApp.Services.Interfaces
@rendermode InteractiveServer
@inject ICourseService CourseService
@inject IStudentService StudentService
@inject NavigationManager NavManager

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container mt-5 mb-5">
    @if (isLoading)
    {
    <div class="text-center p-5">
        <div class="spinner-border text-success" style="width: 3rem; height: 3rem;" role="status"></div>
        <p class="mt-3 text-muted fw-bold">Собираем данные группы...</p>
    </div>
    }
    else if (course == null)
    {
    <div class="alert alert-danger shadow rounded-4 border-0">
        <i class="bi bi-x-circle-fill me-2"></i> Курс не найден или был удален.
        <button class="btn btn-outline-danger btn-sm ms-3" @onclick="GoBack">К списку курсов</button>
    </div>
    }
    else
    {
    <div class="course-hero shadow-lg rounded-4 overflow-hidden mb-5">
        <div class="hero-content p-4 p-md-5 d-flex justify-content-between align-items-center bg-success text-white">
            <div class="hero-text">
                <span class="badge bg-white text-success px-3 py-2 mb-3 rounded-pill fw-bold shadow-sm">ID: #@course.Id</span>
                <h1 class="display-4 fw-bold mb-1">@course.Title</h1>
                <p class="mb-0 opacity-75 fs-5"><i class="bi bi-calendar-check me-2"></i>Активная учебная программа</p>
            </div>

            <div class="students-counter d-flex flex-column align-items-center">
                <div class="counter-circle shadow">
                    <span class="count">@filteredStudents.Count</span>
                </div>
                <span class="counter-label mt-2 fw-bold text-uppercase">Студентов</span>
            </div>
        </div>

        <div class="hero-footer bg-light p-3 px-md-5 d-flex gap-2">
            <button class="btn btn-white border shadow-sm rounded-pill px-4" @onclick="GoBack">
                <i class="bi bi-arrow-left me-2"></i>Назад
            </button>
            <button class="btn btn-success shadow-sm rounded-pill px-4" @onclick="GoToUpdate">
                <i class="bi bi-pencil-square me-2"></i>Правка курса
            </button>
            <button class="btn btn-success shadow-sm rounded-pill px-4" @onclick="GoToCreatStudent  ">
                <i class="bi bi-pencil-square me-2"></i>Создать нового студента
            </button>
        </div>
    </div>

    <div class="students-list-container">
        <div class="section-title d-flex align-items-center mb-4">
            <div class="icon-circle bg-success text-white me-3">
                <i class="bi bi-people"></i>
            </div>
            <h3 class="fw-bold mb-0">Состав группы</h3>
        </div>

        @if (!filteredStudents.Any())
        {
        <div class="empty-state text-center p-5 bg-white shadow-sm rounded-4">
            <img src="https://cdn-icons-png.flaticon.com/512/5058/5058432.png" width="120" class="opacity-50 mb-3" />
            <h5 class="text-muted">На этом курсе пока нет студентов</h5>
            <button class="btn btn-outline-success mt-2 rounded-pill" @onclick='() => NavManager.NavigateTo("/createstudent")'>Зачислить первого</button>
        </div>
        }
        else
        {
        <div class="table-responsive shadow-sm rounded-4">
            <table class="table table-hover align-middle bg-white mb-0 border-0">
                <thead class="bg-light">
                <tr>
                    <th class="ps-4">УЧЕНИК</th>
                    <th>GMAIL / ПОЧТА</th>
                    <th class="text-end pe-4">ДЕЙСТВИЕ</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var student in filteredStudents)
                {
                <tr class="student-row">
                    <td class="ps-4">
                        <div class="d-flex align-items-center">
                            <div class="avatar-circle bg-success-subtle text-success me-3">
                                @student.FullName.Substring(0, 1).ToUpper()
                            </div>
                            <div class="student-info">
                                <div class="fw-bold text-dark">@student.FullName</div>
                                <div class="text-muted small">ID: #@student.Id</div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="text-secondary">
                            <i class="bi bi-envelope-at me-2 text-success"></i>@student.Email
                        </div>
                    </td>
                    <td class="text-end pe-4">
                        <button class="btn btn-success btn-sm rounded-pill px-3 fw-bold shadow-sm"
                                @onclick="() => GoToStudentDetails(student.Id)">
                            Профиль <i class="bi bi-arrow-right-short ms-1"></i>
                        </button>
                    </td>
                </tr>
                }
                </tbody>
            </table>
        </div>
        }
    </div>
    }
</div>

<style>
    .hero-content {
        background: linear-gradient(135deg, #198754 0%, #0a58ca 100%) !important;
        position: relative;
    }

    .counter-circle {
        width: 100px;
        height: 100px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 4px solid rgba(255,255,255,0.3);
    }

    .counter-circle .count {
        font-size: 2.5rem;
        font-weight: 800;
        color: #198754;
    }

    .counter-label {
        font-size: 0.75rem;
        letter-spacing: 1px;
    }

    .avatar-circle {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.2rem;
    }

    .student-row {
        transition: all 0.3s;
        border-bottom: 1px solid #f8f9fa;
    }

    .student-row:hover {
        background-color: #f0fff4 !important;
        cursor: pointer;
    }

    .icon-circle {
        width: 40px;
        height: 40px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-white {
        background: white;
        color: #333;
        font-weight: 500;
    }

    @@media (max-width: 768px) {
    .hero-content {
        flex-direction: column;
        text-align: center;
    }
    .students-counter {
        margin-top: 1.5rem; 
    }
    .display-4 {
        font-size: 2.2rem;
    }
    }
</style>

@code {
[Parameter] public int Id { get; set; }

private CourseDto? course;
private List<StudentDto> filteredStudents = new();
private bool isLoading = true;

protected override async Task OnInitializedAsync()
{
await LoadData();
}

private async Task LoadData()
{
isLoading = true;


var courseRes = await CourseService.GetCourseByid(Id);
if (courseRes?.StatusCode == 200)
{
course = courseRes.Data;
}


var studentRes = await StudentService.GetStudentsAsync();
if (studentRes?.Data != null)
{
filteredStudents = studentRes.Data
.Where(s => s.CourseId == Id)
.ToList();
}

isLoading = false;
}

private void GoBack() => NavManager.NavigateTo("/course");
private void GoToUpdate() => NavManager.NavigateTo($"/updatecourse/{Id}");
private void GoToCreatStudent() => NavManager.NavigateTo($"/createstudent");
private void GoToStudentDetails(int studentId) => NavManager.NavigateTo($"/studentdetails/{studentId}");
}