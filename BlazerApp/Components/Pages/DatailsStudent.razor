@page "/studentdetails/{Id:int}"
@using BlazerApp.Models.Dtos
@using BlazerApp.Services.Interfaces
@rendermode InteractiveServer
@inject IStudentService StudentService
@inject ICourseService CourseService
@inject NavigationManager NavManager

@code {
    [Parameter] public int Id { get; set; }

    private StudentDto? student;
    private CourseDto? course;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var studentRes = await StudentService.GetStudentById(Id);
            if (studentRes?.StatusCode == 200)
            {
                student = studentRes.Data;

                if (student != null)
                {
                    var courseRes = await CourseService.GetCourseByid(student.CourseId);
                    if (courseRes?.StatusCode == 200)
                    {
                        course = courseRes.Data;
                    }
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading student: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoBack() => NavManager.NavigateTo("/student");
    private void GoToUpdate() => NavManager.NavigateTo($"/updatestudent/{Id}");
    private void GoToCourseDetails() => NavManager.NavigateTo($"/detailscourse/{student?.CourseId}");
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container mt-5 mb-5">
    @if (isLoading)
    {
        <div class="text-center p-5">
            <div class="spinner-grow text-primary" style="width: 3rem; height: 3rem;" role="status"></div>
            <p class="mt-3 text-muted fw-bold">Загружаем профиль студента...</p>
        </div>
    }
    else if (student == null)
    {
        <div class="alert alert-danger shadow rounded-4 border-0">
            <i class="bi bi-person-x-fill me-2"></i> Студент не найден.
            <button class="btn btn-outline-danger btn-sm ms-3" @onclick="GoBack">К списку студентов</button>
        </div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-12 col-lg-5">
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden h-100">
                    <div class="profile-header text-center p-5 text-white">
                        <div class="avatar-box mb-3 mx-auto shadow">
                            <span class="avatar-text">@student.FullName.Substring(0, 1).ToUpper()</span>
                        </div>
                        <h3 class="fw-bold mb-1">@student.FullName</h3>
                        <span class="badge bg-white text-primary rounded-pill px-3">ID: #@student.Id</span>
                    </div>
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <label class="text-muted small fw-bold text-uppercase">Email адрес</label>
                            <div class="d-flex align-items-center mt-1">
                                <i class="bi bi-envelope text-primary me-2"></i>
                                <span class="fw-medium">@student.Email</span>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="text-muted small fw-bold text-uppercase">Зарегистрирован</label>
                            <div class="d-flex align-items-center mt-1">
                                <i class="bi bi-calendar3 text-primary me-2"></i>
                                <span class="fw-medium">@student.RegisteredAt.ToString("dd MMMM yyyy")</span>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 mt-5">
                            <button class="btn btn-warning btn-lg rounded-pill fw-bold shadow-sm" @onclick="GoToUpdate">
                                <i class="bi bi-pencil-square me-2"></i> Редактировать
                            </button>
                            <button class="btn btn-outline-secondary rounded-pill" @onclick="GoBack">Назад</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-7">
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden h-100 bg-white">
                    <div class="card-header bg-dark p-4">
                        <h4 class="text-white mb-0"><i class="bi bi-mortarboard me-2 text-warning"></i>Курс обучения</h4>
                    </div>
                    <div class="card-body p-4">
                        @if (course != null)
                        {
                            <h2 class="fw-bold text-primary mb-3">@course.Title</h2>
                            <p class="text-muted border-start border-4 ps-3 mb-4">
                                Студент зачислен и проходит активное обучение по данной программе.
                            </p>
                            
                            <div class="bg-light p-4 rounded-4 d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="small text-muted text-uppercase">Код учебного плана</div>
                                    <div class="fs-4 fw-bold">#@course.Id</div>
                                </div>
                                <button class="btn btn-primary rounded-pill px-4" @onclick="GoToCourseDetails">
                                    К деталям курса <i class="bi bi-arrow-right ms-2"></i>
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-exclamation-circle fs-1 text-muted"></i>
                                <p class="text-muted">Данные о курсе отсутствуют</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .profile-header {
        background: linear-gradient(135deg, #0d6efd 0%, #6610f2 100%);
    }

    .avatar-box {
        width: 90px;
        height: 90px;
        background: rgba(255, 255, 255, 0.2);
        border: 3px solid white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .avatar-text {
        font-size: 3rem;
        font-weight: bold;
        color: white;
    }

    @@media (max-width: 768px) {
        .profile-header { padding: 2rem !important; }
    }
</style>